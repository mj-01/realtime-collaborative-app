# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and update the values for your environment

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================

# Google Cloud Configuration
GOOGLE_SERVICE_ACCOUNT_KEY={"type": "service_account", "project_id": "your-project-id", ...}
GCS_BUCKET_NAME=labs-realtime-app-files
GOOGLE_CLOUD_PROJECT=your-project-id

# Server Configuration
HOST=0.0.0.0
PORT=8080
DEBUG=false

# CORS Configuration (comma-separated URLs)
CORS_ORIGINS=http://localhost:3000,https://frontend-987275518911.us-central1.run.app

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# Backend URL for API calls
NEXT_PUBLIC_BACKEND_URL=https://backend-987275518911.us-central1.run.app

# Frontend URL (for display purposes)
NEXT_PUBLIC_FRONTEND_URL=https://frontend-987275518911.us-central1.run.app

# Environment
NODE_ENV=production

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Local development URLs
LOCAL_BACKEND_URL=http://localhost:8000
LOCAL_FRONTEND_URL=http://localhost:3000

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================

# Production URLs (update these with your actual deployed URLs)
PRODUCTION_BACKEND_URL=https://backend-987275518911.us-central1.run.app
PRODUCTION_FRONTEND_URL=https://frontend-987275518911.us-central1.run.app

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Secret (if implementing authentication)
JWT_SECRET=your-super-secret-jwt-key-here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Firestore Configuration
FIRESTORE_PROJECT_ID=your-project-id
FIRESTORE_DATABASE_ID=(default)

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================

# File upload limits
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=image/*,application/pdf,text/*,application/json

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level
LOG_LEVEL=INFO

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
ENABLE_FILE_UPLOAD=true
ENABLE_REAL_TIME_CHAT=true
ENABLE_WHITEBOARD=true
ENABLE_FILE_CLEANUP=true
